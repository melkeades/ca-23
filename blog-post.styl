 .blog__rich_text
   .w-richtext-align-floatleft
    padding 2rem 4rem 2rem 0
    width 55%
  .w-richtext-align-floatright
    padding 2rem 0 2rem 4rem
    width 55%
  .w-richtext-align-center
    padding 2rem 0 2rem 0
    width 100%
    margin 0 auto !important
    text-align center
    // div
    //   margin:  auto !important
    //   img
    //     margin auto

  .blog__rich_text blockquote
    margin 3rem 0 0 0
    padding-bottom 4rem
    @media screen and (max-width: 478px)
      padding 3rem 0 
    &::before 
      content: url('https://uploads-ssl.webflow.com/656e3b5605d1347c99ba79f6/65846d8cd690aaaf59bba051_quote.svg');
      position: absolute;
      top: 0;
      left: 50%;
      translate -50% -50%


